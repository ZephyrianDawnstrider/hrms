# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Database Configuration
# For local development: Leave DATABASE_URL commented out to use SQLite
# For production: Set this to your PostgreSQL connection string
# DATABASE_URL=postgresql://username:password@host:port/database

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.onrender.com

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-domain.onrender.com
